<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="DRButton" parent="android:style/Widget.Button">
		<item name="android:textColor">@android:color/primary_text_dark</item>
		<item name="android:background">#444444</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingRight">20dp</item>
	</style>
	<style name="DRSpinner" parent="android:style/Widget.Spinner">
	    <item name="android:background">@*android:drawable/dropdown_normal_holo_light</item>
        <item name="android:clickable">true</item>
        <item name="android:spinnerMode">dropdown</item>
        
        <item name="android:dropDownSelector">@*android:drawable/list_selector_background_default_light</item>
        <item name="android:popupBackground">#444444</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">center</item>
	</style>
    
   <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
   		<item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:buttonStyle">@style/DRButton</item>
        <item name="android:spinnerStyle">@style/DRSpinner</item>
    </style>
    
    
</resources>
